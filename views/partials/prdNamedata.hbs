{{#if matchingProducts}}
<h2>Products:</h2>
{{#each matchingProducts}}
  <p><strong>Title:</strong> {{this.title}}</p>
  <img src="{{this.imgUrl}}" alt="{{this.title}}" style="max-width: 250px;">
  <p><strong>Category Name:</strong> {{this.categoryName}}</p>
  <p><strong>List Price:</strong> ${{this.listPrice}}</p>
  <p><strong>Price:</strong> ${{this.price}}</p>
  <p><strong>Is Best Seller:</strong> {{this.isBestSeller}}</p>
  <hr>
{{/each}}
{{else}}
<h2>No data available!!!</h2>
{{/if}}
